<%= erb :project_navigation %>

<%
  nav_items = {
    build_path(@build) => "Overview",
    build_changes_path(@build) => "Changes",
    build_commits_path(@build) => "Commits",
  }
%>
<div class="panel panel-default">
  <ol class="breadcrumb">
    <li><a href="<%= builds_path(@pipeline) %>">Builds</a></li>
    <li><a href="<%= build_path(@build) %>">Build <%= @build %></a></li>
    <li class="active"><%= nav_items.fetch(current_path) %></li>
  </ol>

  <ul class="nav nav-tabs" style="padding-left:10px;">
    <% nav_items.each do |path, title| %>
      <li role="presentation"<%= ' class="active"' if path == current_path %>><a href="<%= path %>"><%= title %></a></li>
    <% end %>
  </ul>

  <%= yield %>

</div>
