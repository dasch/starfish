<%= erb :project_navigation %>

<div class="panel panel-default">
  <div class="panel-body">
    <form action="<%= project_settings_path(@project) %>" method="POST">
      <div class="form-group">
        <label for="repo">Project name</label>
        <input type="text" class="form-control" name="name" value="<%= @project.name %>" placeholder="Project name">
      </div>

      <button type="submit" class="btn btn-default">Update Project Settings</button>
    </form>
  </div>
</div>
