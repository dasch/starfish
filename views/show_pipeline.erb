          <% end %>
        </td>
        <td><span class="glyphicon glyphicon-arrow-right"></span></td>
        <td>
          <% [27, 26].map {|i| @pipeline.find_build(number: i) }.each do |build| %>
            <a href="<%= build_path(build) %>"><%= build %></a>
          <% end %>
        </td>
        <td><span class="glyphicon glyphicon-arrow-right"></span></td>
        <td>
          <% [25].map {|i| @pipeline.find_build(number: i) }.each do |build| %>
            <a href="<%= build_path(build) %>"><%= build %></a>
          <% end %>
        </td>
        <td><span class="glyphicon glyphicon-arrow-right"></span></td>
        <% @pipeline.channels.map {|i| @pipeline.find_build(number: 24) }.each do |build| %>
          <td>
            <a href="<%= build_path(build) %>"><%= build %></a>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
