<%= erb :project_navigation %>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th>Pending CI</th>
        <th></th>
        <th>Pending image build</th>
        <th></th>
        <th>Pending approval </th>
        <th></th>
        <% @pipeline.channels.each do |channel| %>
          <th><%= channel %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <% [30, 29, 28].map {|i| @pipeline.find_build(number: i) }.each do |build| %>
